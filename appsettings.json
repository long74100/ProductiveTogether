{
    "serilog": {
        "using": [],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Serilogs/log.txt",
                    "outputTemplate": "{Timestamp:G} {Message}{NewLine}{Exception:1}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Serilogs/log.json",
                    "formatter":  "Serilog.Formatting.Json.JsonFormatter, Serilog"
                }
            }
        ]
    },
    "mysqlconnection": {
        "connectionString": "server=localhost;userid=root;password=yourpass;database=accountowner;"
    },
    "AllowedHosts": "*"
}
